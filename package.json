        "@types/yargs": "^17.0.10",
        "coveralls": "^3.1.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.16.0",
        "jest": "^27.5.1",
        "np": "^7.6.1",
        "ts-jest": "^27.1.4",
